<odoo>
    <data noupdate="1">
        <!-- Record Rule for Portal & Public -->
        <record id="product_barcode_rule_portal_public" model="ir.rule">
            <field name="name">Product Barcode: portal/public access</field>
            <field name="model_id" ref="model_product_barcode"/>
            <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_public'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>
